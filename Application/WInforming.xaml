<Window x:Class="Application.WInforming"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Правильный ответ" Height="219" Width="401" ResizeMode="NoResize" Loaded="Window_Loaded">
    <Grid>
        <TextBlock Height="20" Margin="10" HorizontalAlignment="Center" Name="tbStatus" Text="Информация: верно или нет!" VerticalAlignment="Top" Width="150" />
        <TextBlock Height="103" HorizontalAlignment="Left" Margin="12,36,0,0" Name="tbNote" Text="Сама информация,т.е. ответ на вопрос и почему так." VerticalAlignment="Top" Width="355" />
        <Button Content="ОК" Height="23" HorizontalAlignment="Center" Margin="0,0,0,10" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="OkAndClose"/>
    </Grid>
</Window>
