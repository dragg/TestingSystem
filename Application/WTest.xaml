<Window x:Class="Application.WTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WTest" Height="300" Width="449" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50px"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50px"></RowDefinition>
            <RowDefinition Height="10px"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Name="gridQuestion">
            <TextBlock Height="38" HorizontalAlignment="Left" Margin="6,6,6,6" Name="tbQuestion" Text="" VerticalAlignment="Top" Width="415" />
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Vertical" Name="spAnswers" >
            
        </StackPanel>
        
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Margin="10, 10, 10, 10" Content="Комментарий" Name="btNote" Click="ShowNote" IsEnabled="False"></Button>
            <Button Grid.Column="1" Margin="10, 10, 10, 10" Content="Предыдущий" Name="btPrev" Click="Prev" IsEnabled="False"></Button>
            <Button Grid.Column="2" Margin="10, 10, 10, 10" Content="Ответить" Name="btToAnswer" Click="ToAnswer"></Button>
            <Button Grid.Column="3" Margin="10, 10, 10, 10" Content="Следующий" Name="btNext" Click="Next"></Button>
            <Button Grid.Column="4" Margin="30, 20, 5, 5" Content="Завершить" Name="btFinish" Click="Finish" IsEnabled="False"></Button>
        </Grid>
    </Grid>
</Window>
